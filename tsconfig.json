{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "out",
    "paths": {
      "@rxjs": ["node_modules/rxjs"],
      "@rxjs/operators": ["node_modules/rxjs/operators"],
    },
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts",
    "node_modules/gs-testing/export/*",
    "node_modules/gs-types/export/*"
  ]
}
